<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/blue_black"
                android:endColor="@color/deep_black"
                android:angle="270"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="80%"
                android:centerY="10%"
                android:startColor="#40FF3040"
                android:endColor="#00000000"/>
        </shape>
    </item>
</layer-list>